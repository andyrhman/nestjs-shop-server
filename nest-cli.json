{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "root": "./",
  "compilerOptions": {
    "assets": [
      {
        "include": "auth/templates/**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "order/templates/**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "reset/templates/**/*.hbs",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
