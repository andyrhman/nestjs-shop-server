{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "server",
            "image": "tataran/shop-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "db",
            "image": "postgres",
            "hostname": "db",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "tataran/shop-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "server",
                "db"
            ],
            "memory": 128
        }
    ]
}